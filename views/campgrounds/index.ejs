<%- include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container" id="top-container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked camps from around the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>   
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div  class="thumbnail">
                    <img class="img-thumbnail" id="mainPage" src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary btn-sm" href="/campgrounds/<%= campground._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>             
    </div>
</div>


<%- include ('../partials/footer') %>
<%- include ('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!-- <p calss="lead">YelpCamp</p> -->
            <div class="list-group">
                <li class="list-group-item active" aria-current="true">Comments</li>
                <li class="list-group-item">
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-end"><%= moment(comment.createdAt).fromNow() %></span>
                                <p><%= comment.text %></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                    <form id="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                        
                    <% }); %>
                </li>
                
                <li class="list-group-item">
                    <div>
                        <a class="btn btn-outline-success" href="/campgrounds/<%= campground._id%>/comments/new">Add New Comment</a>
                    </div>
                </li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-thumbnail img-fluid" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="float-end">$<%= campground.price %>/night</h4>
                    <h3><%= campground.name %></h1>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by: <%= campground.author.username %> <span class="float-end">  <%= moment(campground.createdAt).fromNow() %> </span></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-sm btn-warning " href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>

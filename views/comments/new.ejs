<%- include ('../partials/header') %>
<div class="container" style="text-align: center;">
    
    <h1>Add New Comment to <%= campground.name %></h1>
    <div class="row" style="width: 50%; margin: auto;">
       
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <!-- <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div> -->
            <div class="form-group">
                <button class="btn btn-lg btn-primary col-12">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    
    </div>
</div>
<%- include ('../partials/footer') %>
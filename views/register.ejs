<%- include (`./partials/header`) %>

<div class="container" style="text-align: center;">
    <h1 style="text-align: center">Register</h1>
    <div class="row" style="width: 50%; margin: auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control mt-1" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <input class="form-control mt-1" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block mt-2">Sign Up!</button>
            </div>
        </form>
    </div>
</div>

<%- include (`./partials/footer`) %>